<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReturnVanFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/return_van_mileage_label_tv"
            android:layout_width="@dimen/label_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/label_text_margin"
            android:layout_marginRight="@dimen/label_text_margin"
            android:gravity="right"
            android:text="@string/return_van_mileage_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <EditText
            android:id="@+id/return_van_mileage_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="10010"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/return_van_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/return_van_submit_button_name" />

</LinearLayout>